{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "noImplicitAny": true,
    "target": "es2020",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "lib": ["es2020", "dom"],
    "declarationDir": "./dist",
    "rootDir": "./src",
    "composite": false,
    "emitDeclarationOnly": true,
    "skipLibCheck": true
  },
  "exclude": ["esbuild.ts", "dist", "node_modules", "eslint.config.mjs"]
}
